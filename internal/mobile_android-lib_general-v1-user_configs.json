{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "title": "AndroidUserConfig",
  "properties": {
    "userId": {
      "type": "string"
    },
    "version" : {
      "type": "number"
    },
    "role": {
      "properties": {
        "name": {
          "title": "AndroidConfigRole",
          "type": "string",
          "enum": [
            "FULFILLER",
            "SUPERVISOR",
            "ADMINISTRATOR"
          ],
          "tsEnumNames": [
            "FULFILLER",
            "SUPERVISOR",
            "ADMINISTRATOR"
          ]
        },
        "facilityIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "language": {
          "title": "AndroidUserConfigLanguage",
          "type": "string",
          "enum": [
            "de_DE",
            "en_US"
          ],
          "tsEnumNames": [
            "de_DE",
            "en_US"
          ]
    }
  },
  "required": [
    "userId",
    "role",
    "version"
  ]
}
