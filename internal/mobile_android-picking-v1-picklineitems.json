{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "AndroidPickLineItem",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "pickJobRef": {
      "type": "string",
      "minLength": 1
    },
    "facilityRef": {
      "type": "string",
      "minLength": 1
    },
    "pickJobVersion": {
      "type": "integer",
      "minimum": 0
    },
    "tenantArticleId": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "OPEN",
        "IN_PROGRESS",
        "CLOSED"
      ]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "subtitle": {
      "type": "string",
      "minLength": 1
    },
    "imageUrl": {
      "type": "string",
      "minLength": 1
    },
    "pickedArticleCount": {
      "type": "integer",
      "minimum": 0
    },
    "orderedArticleCount": {
      "type": "integer",
      "minimum": 1
    },
    "scannableCodes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "articleInfo": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ArticleInfo"
      }
    },
    "priority": {
      "type": "integer"
    },
    "hasSubstituteItems": {
      "type": "boolean"
    },
    "pickedSubstituteItems": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SubstituteItem"
      }
    }
  },
  "required": [
    "id",
    "pickJobRef",
    "facilityRef",
    "pickJobVersion",
    "tenantArticleId",
    "status",
    "title",
    "pickedArticleCount",
    "orderedArticleCount",
    "scannableCodes",
    "articleInfo",
    "hasSubstituteItems",
    "pickedSubstituteItems"
  ],
  "definitions": {
    "ArticleInfo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "info": {
          "type": "string",
          "minLength": 1
        },
        "priority": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "info"
      ]
    },
    "SubstituteItem": {
      "type": "object",
      "properties": {
        "tenantArticleId": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "imageUrl": {
          "type": "string",
          "minLength": 1
        },
        "articleInfo": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ArticleInfo"
          }
        },
        "scannableCodes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pickedSubstituteCount": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "tenantArticleId",
        "title",
        "articleInfo",
        "scannableCodes",
        "pickedSubstituteCount"
      ]
    }
  }
}
