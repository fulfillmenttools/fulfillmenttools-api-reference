{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "AndroidSubstituteItem",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "pickLineItemRef": {
      "type": "string",
      "minLength": 1
    },
    "facilityRef": {
      "type": "string",
      "minLength": 1
    },
    "tenantArticleId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "imageUrl": {
      "type": "string",
      "minLength": 1
    },
    "pickedSubstituteCount": {
      "type": "integer",
      "minimum": 0
    },
    "articleInfo": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ArticleInfo"
      }
    }
  },
  "required": [
    "id",
    "pickLineItemRef",
    "facilityRef",
    "tenantArticleId",
    "title",
    "pickedSubstituteCount",
    "articleInfo"
  ],
  "definitions": {
    "ArticleInfo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "info": {
          "type": "string",
          "minLength": 1
        },
        "priority": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "info",
        "priority"
      ]
    }
  }
}
