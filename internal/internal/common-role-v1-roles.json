{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "definitions": {
    "Role": {
      "properties": {
        "name": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "uniqueItems": true,
          "items" : [
            {
              "type": "string",
              "enum": ["user_read", "user_write",
                "facility_read", "facility_write",
                "order_read", "order_write",
                "pickjob_read", "pickjob_write",
                "listing_read",  "listing_write"]
            }
          ]
        }
      },
      "required": [
        "name"
      ]
    }
  }
}