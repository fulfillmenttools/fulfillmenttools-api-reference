{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "WebUser": {
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "role": {
          "properties": {
            "name": {
              "$ref": "#/definitions/WebRole"
            },
            "facilities": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "version": {
          "type": "number"
        }
      },
      "type": "object",
      "required": [
        "username",
        "firstname",
        "lastname"
      ]
    },
    "WebRole": {
      "type": "string",
      "enum": [
        "FULFILLER",
        "SUPERVISOR",
        "ADMINISTRATOR"
      ]
    },
    "WebUsersFacilitySelect": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "label": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "postalCode",
        "version",
        "label"
      ]
    }
  }
}
