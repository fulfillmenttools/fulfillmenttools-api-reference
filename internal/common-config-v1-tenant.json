{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "definitions": {
    "order-routing": {
      "properties": {
        "infiniteStockEnabled": {
          "type": "boolean",
          "default": true
        },
        "maxSplitOrder": {
          "type": "number",
          "default": 1
        }
      },
      "required": [
        "infiniteStockEnabled"
      ]
    },
    "gdpr": {
      "properties": {
        "retentionTime": {
          "properties": {
            "handoverjob": {
              "type": "integer",
              "default": 30
            },
            "order": {
              "type": "integer",
              "default": 30
            },
            "parcel": {
              "type": "integer",
              "default": 30
            },
            "pickjob": {
              "type": "integer",
              "default": 30
            }
          },
          "required": [
            "handoverjob",
            "parcel",
            "order",
            "pickjob"
          ]
        }
      },
      "required": [
        "retentionTime"
      ]
    },
    "return-note": {
      "properties": {
        "contactInformation": {
          "type": "string"
        },
        "reasons": {
          "type": "array"
        }
      },
      "required": [
        "contactInformation",
        "reasons"
      ]
    }
  }
}