{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "AndroidReturnJobItem",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1
        },
        "returnJobId": {
            "type": "string",
            "minLength": 1
        },
        "returnCount": {
            "type": "integer",
            "minimum": 0
        },
        "returnReasonId": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string",
            "minLength": 1
        },
        "subtitle": {
            "type": "string",
            "minLength": 1
        },
        "imageUrl": {
            "type": "string",
            "minLength": 1
        },
        "pickedArticleCount": {
            "type": "integer",
            "minimum": 0
        },
        "scannableCodes": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "articleInfo": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/ArticleInfo"
            }
        },
        "version": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "id",
        "returnJobId",
        "returnCount",
        "title",
        "pickedArticleCount",
        "scannableCodes",
        "articleInfo",
        "version"
    ],
    "definitions": {
        "ArticleInfo": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "info": {
                    "type": "string",
                    "minLength": 1
                },
                "priority": {
                    "type": "integer"
                }
            },
            "required": [
                "name",
                "info",
                "priority"
            ]
        }
    }
}
